<theme>
    <include>./system/metadata/_default.xml</include>
    <include>./system/metadata/${system.theme}.xml</include>
     
        
        <aspectRatio name="16:10">
            <include>./16-10.xml</include>
        </aspectRatio>
        <aspectRatio name="4:3">
            <include>./4-3.xml</include>
        </aspectRatio>
        <aspectRatio name="21:9">
            <include>./21-9.xml</include>
        </aspectRatio>

    <variables>
        <mainFontColor>000000</mainFontColor>
        <mainFontColor2>333333</mainFontColor2>
        <mainFontColor3>555555</mainFontColor3>
        <mainFont>./core/fonts/museum.ttf</mainFont>
        <helpColor>000000</helpColor>
        <helpFont>./core/fonts/museumBold.ttf</helpFont>
        <helpFontSize>0.025</helpFontSize>
    </variables>

    <view name="system">
        <carousel name="system_grid">
            <pos>0.687 0.5</pos>
            <size>0.5 0.5</size>
            <origin>0.5 0.5</origin>
            <staticImage>./core/backgrounds/${system.theme}.png</staticImage>
            <defaultImage>./core/backgrounds/auto-allgames.png</defaultImage>
            <itemSize>0.5 .5</itemSize>
            <itemScale>1</itemScale>
            <color>00000000</color>
            <unfocusedItemOpacity>0.25</unfocusedItemOpacity>
            <text>${system.fullName}</text>
            <textColor>${mainFontColor}</textColor>
            <fontPath>${mainFont}</fontPath>
            <fontSize>0.025</fontSize>
            <letterCase>uppercase</letterCase>
            <lineSpacing>1.2</lineSpacing>
            <zIndex>32</zIndex>
        </carousel>
        <image name="cover">
            <pos>0.187 0.5</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.85</size>
            <path>./core/images/white2.jpg</path>
            <zIndex>5</zIndex>
        </image>
        <image name="cover2">
            <pos>0.19 0.5051</pos>
            <origin>0.5 0.5</origin>
            <size>0.35 0.85</size>
            <path>./core/images/background.png</path>
            <color>111111</color>
            <opacity>0.4</opacity>
            <zIndex>4</zIndex>
        </image>
        <image name="frame">
            <pos>0.687 0.5</pos>
            <origin>0.5 0.5</origin>
            <size>0.6 0.68</size>
            <path>./core/images/frame.png</path>
            <zIndex>30</zIndex>
        </image>
        <image name="cover3">
            <pos>0.687 0.5</pos>
            <origin>0.5 0.5</origin>
            <size>0.55 0.605</size>
            <path>./core/images/white.jpg</path>
            <color>EEEEEE</color>
            <zIndex>31</zIndex>
        </image>
        <text name="sysman">
            <pos>0.025 0.18</pos>
            <fontPath>./core/fonts/museumBoldItalic.ttf</fontPath>
            <fontSize>0.035</fontSize>
            <text>${systemManufacturer}, (${systemReleaseYear})</text>
            <color>${mainFontColor3}</color>
        </text>
        <text name="sysname">
            <pos>0.025 0.08</pos>
            <size>0.3 0.1</size>
            <fontPath>./core/fonts/museumBold.ttf</fontPath>
            <color>${mainFontColor}</color>
            <fontSize>0.04</fontSize>
            <systemdata>fullname</systemdata>
            <letterCase>uppercase</letterCase>
            <lineSpacing>1</lineSpacing>
            <verticalAlignment>center</verticalAlignment>
        </text>
        <text name="sysdesc">
            <pos>0.025 0.25</pos>
            <size>0.325 0.67</size>
            <fontPath>${mainFont}</fontPath>
            <color>${mainFontColor2}</color>
            <fontSize>0.025</fontSize>
            <text>${systemDescription}</text>
            <container>false</container>
            <verticalAlignment>top</verticalAlignment>
            <lineSpacing>1</lineSpacing>
            <fontPath>./core/fonts/museumLight.ttf</fontPath>
        </text>
    </view>
    <view name="gamelist">
        <carousel name="system_grid">
            <pos>0.76 0.85</pos>
            <size>0.5 0.2</size>
            <origin>0.5 0.5</origin>
            <maxItemCount>3.5</maxItemCount>
            <imageType>cover</imageType>
            <itemSize>0.1 .15</itemSize>
            <itemScale>1.3</itemScale>
            <selectedItemMargins>0.02 0.02</selectedItemMargins>
            <color>00000000</color>
            
            <horizontalOffset>-0.29</horizontalOffset>
            <unfocusedItemOpacity>0.25</unfocusedItemOpacity>
            <text>${system.fullName}</text>
            <textColor>000000</textColor>
            <fastScrolling>true</fastScrolling>
            <fontPath>${mainFont}</fontPath>
            <fontSize>0.025</fontSize>
            <letterCase>uppercase</letterCase>
            <lineSpacing>1.2</lineSpacing>
            <systemNameSuffix>false</systemNameSuffix>
            <zIndex>29</zIndex>
        </carousel>
        <image name="cover">
            <pos>0.26 0.5</pos>
            <origin>0.5 0.5</origin>
            <size>0.5 0.9</size>
            <path>./core/images/white2.jpg</path>
            <zIndex>5</zIndex>
        </image>
        <image name="cover2">
            <pos>0.265 0.5051</pos>
            <origin>0.5 0.5</origin>
            <size>0.5 0.9</size>
            <path>./core/images/background.png</path>
            <color>111111</color>
            <opacity>0.4</opacity>
            <zIndex>4</zIndex>
        </image>
        <image name="frame">
            <pos>0.76 0.4</pos>
            <origin>0.5 0.5</origin>
            <size>0.46 0.65</size>
            <path>./core/images/frame.png</path>
            <zIndex>28</zIndex>
        </image>
        <image name="cover3">
            <pos>0.76 0.4</pos>
            <origin>0.5 0.5</origin>
            <size>0.41 0.56</size>
            <path>./core/images/white.jpg</path>
            <color>222222</color>
            <zIndex>29</zIndex>
        </image>
        <image name="cover4">
            <pos>0.76 0.705</pos>
            <origin>0.5 0.5</origin>
            <size>0.225 0.04</size>
            <path>./core/images/logo.png</path>
            <opacity>1</opacity>
            <zIndex>31</zIndex>
        </image>
        <text name="syslbl">
            <pos>0.76 0.705</pos>
            <size>0.215 0.038</size>
            <origin>0.5 0.5</origin>
            <fontPath>./core/fonts/museumBoldItalic.ttf</fontPath>
            <fontSize>0.02</fontSize>
            <color>${mainFontColor}</color>
            <horizontalAlignment>center</horizontalAlignment>
            <metadata>systemFullname</metadata>
            <letterCase>capitalize</letterCase>
            <zIndex>32</zIndex>
        </text>
        <text name="sysname">
            <pos>0.025 0.05</pos>
            <size>0.475 0.1</size>
            <fontPath>./core/fonts/museumBold.ttf</fontPath>
            <fontSize>0.04</fontSize>
            <color>${mainFontColor}</color>
            <metadata>name</metadata>
            <letterCase>uppercase</letterCase>
            <lineSpacing>1</lineSpacing>
            <systemNameSuffix>false</systemNameSuffix>
            <verticalAlignment>center</verticalAlignment>
        </text>
        <text name="devlbl">
            <pos>0.025 0.25</pos>
            <color>${mainFontColor}</color>
            <fontPath>./core/fonts/museumBoldItalic.ttf</fontPath>
            <fontSize>0.025</fontSize>
            <text>Developer:</text>
        </text>
        <text name="publbl">
            <pos>0.26 0.25</pos>
            <fontPath>./core/fonts/museumBoldItalic.ttf</fontPath>
            <fontSize>0.025</fontSize>
            <text>Publisher:</text>
        </text>
        <text name="dev">
            <pos>0.025 0.29</pos>
            <size>0.23 0.1</size>
            <color>${mainFontColor3}</color>
            <fontPath>./core/fonts/museumLightItalic.ttf</fontPath>
            <fontSize>0.035</fontSize>
            <verticalAlignment>top</verticalAlignment>
            <metadata>developer</metadata>
            <defaultValue>tbc</defaultValue>
            <lineSpacing>1</lineSpacing>
        </text>
        <text name="pub">
            <pos>0.26 0.29</pos>
            <size>0.23 0.1</size>
            <color>${mainFontColor3}</color>
            <verticalAlignment>top</verticalAlignment>
            <fontPath>./core/fonts/museumLightItalic.ttf</fontPath>
            <fontSize>0.035</fontSize>
            <defaultValue>tbc</defaultValue>
            <metadata>publisher</metadata>
            <lineSpacing>1</lineSpacing>
        </text>
        <text name="playerlbl">
            <pos>0.025 0.36</pos>
            <color>${mainFontColor}</color>
            <fontPath>./core/fonts/museumBoldItalic.ttf</fontPath>
            <fontSize>0.025</fontSize>
            <text>Number of Players:</text>
        </text>
        <text name="releselbl">
            <pos>0.26 0.36</pos>
            <color>${mainFontColor}</color>
            <fontPath>./core/fonts/museumBoldItalic.ttf</fontPath>
            <fontSize>0.025</fontSize>
            <text>Released:</text>
        </text>
        <text name="player">
            <pos>0.025 0.395</pos>
            <size>0.2 0.1</size>
            <color>${mainFontColor3}</color>
            <fontPath>./core/fonts/museumLightItalic.ttf</fontPath>
            <fontSize>0.035</fontSize>
            <verticalAlignment>top</verticalAlignment>
            <metadata>players</metadata>
            <defaultValue>tbc</defaultValue>
        </text>
        <datetime name="release">
            <pos>0.26 0.395</pos>
            <size>0.2 0.1</size>
            <color>${mainFontColor3}</color>
            <verticalAlignment>top</verticalAlignment>
            <fontPath>./core/fonts/museumLightItalic.ttf</fontPath>
            <fontSize>0.035</fontSize>
            
            <defaultValue>tbc</defaultValue>
            <metadata>releasedate</metadata>
        </datetime>
        <text name="systemlbl">
            <pos>0.025 0.15</pos>
            <color>${mainFontColor}</color>
            <fontPath>./core/fonts/museumBoldItalic.ttf</fontPath>
            <fontSize>0.025</fontSize>
            <text>Game System:</text>
        </text>
        <text name="system">
            <pos>0.025 0.185</pos>
            <size>0.475 0.1</size>
            <color>${mainFontColor3}</color>
            <fontPath>./core/fonts/museumLightItalic.ttf</fontPath>
            <fontSize>0.035</fontSize>
            <verticalAlignment>top</verticalAlignment>
            <metadata>sourceSystemFullname</metadata>
            <defaultValue>tbc</defaultValue>
        </text>
        <text name="sysdesc">
            <pos>0.025 0.46</pos>
            <size>0.475 0.4</size>
            <color>${mainFontColor2}</color>
            <fontPath>${mainFont}</fontPath>
            <fontSize>0.025</fontSize>
            <metadata>description</metadata>
            <container>true</container>
            <lineSpacing>1</lineSpacing>
            <fontPath>./core/fonts/museumLight.ttf</fontPath>
        </text>
         <rating name="rating">
                <pos>0.025 0.88</pos>
                <size>0.1 0.045</size>
                <filledPath>./core/images/rating_filled.svg</filledPath>
                <unfilledPath>./core/images/rating_empty.svg</unfilledPath>
                <color>${mainFontColor3}</color>
            </rating>
        <badges name="all">
			<pos>0.22 0.87</pos>
			<size>0.27 0.06</size>
			<direction>row</direction>
			<lines>1</lines>
			<itemsPerLine>6</itemsPerLine>
			<slots>completed, favorite, altemulator, kidgame,controller,collection,manual</slots>
			<controllerPos>0.5 0.575</controllerPos>
			<controllerSize>0.85</controllerSize>
			<folderLinkSize>0.85 0.9</folderLinkSize>
			<folderLinkPos>0.47 0.48</folderLinkPos>
			<folderLinkIconColor>000000</folderLinkIconColor>
			<customFolderLinkIcon>./core/badges/link.png</customFolderLinkIcon>
			<badgeIconColor>${mainFontColor3}</badgeIconColor>
			<horizontalAlignment>right</horizontalAlignment>
			<customBadgeIcon badge="manual">./core/badges/manual.svg</customBadgeIcon>
			<customBadgeIcon badge="kidgame">./core/badges/kid.svg</customBadgeIcon>
			<customBadgeIcon badge="collection">./core/badges/collection.svg</customBadgeIcon>
			<customBadgeIcon badge="altemulator">./core/badges/alt.svg</customBadgeIcon>
			<customBadgeIcon badge="favorite">./core/badges/fave.svg</customBadgeIcon>
			<customBadgeIcon badge="completed">./core/badges/complete.svg</customBadgeIcon>
			<customBadgeIcon badge="controller">./core/badges/control.svg</customBadgeIcon>
            <zIndex>50</zIndex>
		</badges>
    </view>

    <view name="gamelist,system">
        <image name="back">
                <pos>0.5 0.5</pos>
                <cropSize>1 1</cropSize>
                <origin>0.5 0.5</origin>
                <path>./core/images/joewoods.jpg</path>
                <zIndex>2</zIndex>
        </image>
        <helpsystem name="help">
            <pos>.5 0.98</pos>
            <origin>0.5 0.5</origin>
            <fontPath>${helpFont}</fontPath>
            <textColor>${helpColor}</textColor>
            <iconColor>${helpColor}</iconColor>
            <fontSize>${helpFontSize}</fontSize>
        </helpsystem>
    </view>

    <variant name="withVideos">
        <view name="gamelist">
            <video name="md_video">
                <pos>0.76 0.4</pos>
                <maxSize>0.4 0.55</maxSize>
                <origin>0.5 0.5</origin>
                <imageType>screenshot,titlescreen,image</imageType>
                <interpolation>nearest</interpolation>
                <pillarboxes>false</pillarboxes>
                <pillarboxThreshold>0.85 0.90</pillarboxThreshold>
                <delay>1.7</delay>
                <scrollFadeIn>true</scrollFadeIn>
            </video>
        </view>
    </variant>

    <variant name="withoutVideos">
        <view name="gamelist">
            <image name="md_image">
                <pos>0.76 0.4</pos>
                <maxSize>0.4 0.55</maxSize>
                <origin>0.5 0.5</origin>
                <imageType>screenshot,titlescreen,image</imageType>
                <interpolation>nearest</interpolation>
                <scrollFadeIn>true</scrollFadeIn>
            </image>
        </view>
    </variant>
</theme>