<theme>
    <view name="system">
      <image name="frame">
            <pos>0.687 0.5</pos>
            <origin>0.5 0.5</origin>
            <size>0.6 0.55</size>
            <path>./core/images/frame.png</path>
            <zIndex>30</zIndex>
        </image>
        <image name="cover3">
            <pos>0.687 0.5</pos>
            <origin>0.5 0.5</origin>
            <size>0.5475 0.49</size>
            <path>./core/images/white.jpg</path>
            <color>EEEEEE</color>
            <zIndex>31</zIndex>
        </image>
         <text name="sysdesc">
            <pos>0.025 0.25</pos>
            <size>0.325 0.67</size>
            <fontPath>${mainFont}</fontPath>
            <color>${mainFontColor2}</color>
            <fontSize>0.02</fontSize>
            <text>${systemDescription}</text>
            <container>false</container>
            <lineSpacing>1</lineSpacing>
            <fontPath>./core/fonts/museumLight.ttf</fontPath>
        </text>
    </view>

    <view name="gamelist">
       <image name="frame">
            <pos>0.76 0.4</pos>
            <origin>0.5 0.5</origin>
            <size>0.46 0.55</size>
            <path>./core/images/frame.png</path>
            <zIndex>28</zIndex>
        </image>
        <image name="cover3">
            <pos>0.76 0.4</pos>
            <origin>0.5 0.5</origin>
            <size>0.41 0.48</size>
            <path>./core/images/white.jpg</path>
            <color>222222</color>
            <zIndex>29</zIndex>
        </image>
        <image name="cover4">
            <pos>0.76 0.66</pos>
            <origin>0.5 0.5</origin>
            <size>0.225 0.03</size>
            <path>./core/images/logo.png</path>
            <opacity>1</opacity>
            <zIndex>31</zIndex>
        </image>
        <text name="syslbl">
            <pos>0.76 0.66</pos>
            <size>0.215 0.038</size>
        </text>
        <text name="sysdesc">
            <fontSize>0.02</fontSize>
        </text>
        </view>

    <variant name="withVideos">
        <view name="gamelist">
            <video name="md_video">
                <pos>0.76 0.4</pos>
                <maxSize>0.4 0.45</maxSize>
                <origin>0.5 0.5</origin>
                <imageType>screenshot,titlescreen,image</imageType>
                <interpolation>nearest</interpolation>
                <pillarboxes>false</pillarboxes>
                <pillarboxThreshold>0.85 0.90</pillarboxThreshold>
                <delay>1.7</delay>
                <scrollFadeIn>true</scrollFadeIn>
            </video>
        </view>
    </variant>

    <variant name="withoutVideos">
        <view name="gamelist">
            <image name="md_image">
                <pos>0.76 0.4</pos>
                <maxSize>0.4 0.45</maxSize>
                <origin>0.5 0.5</origin>
                <imageType>screenshot,titlescreen,image</imageType>
                <interpolation>nearest</interpolation>
                <scrollFadeIn>true</scrollFadeIn>
            </image>
        </view>
    </variant>  
</theme>